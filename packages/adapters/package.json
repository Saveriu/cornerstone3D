{
    "name": "@cornerstonejs/adapters",
    "version": "2.0.0-beta.24",
    "description": "Adapters for Cornerstone3D to/from formats including DICOM SR and others",
    "src": "src/index.ts",
    "main": "./dist/umd/adapters.umd.js",
    "module": "./dist/esm/index.js",
    "types": "./dist/esm/index.d.ts",
    "files": [
        "dist"
    ],
    "directories": {
        "build": "dist"
    },
    "exports": {
        ".": "./dist/esm/index.js",
        "./cornerstone": "./dist/esm/adapters/cornerstone/index.js",
        "./cornerstone/*": "./dist/esm/adapters/cornerstone/*.js",
        "./cornerstone3D": "./dist/esm/adapters/cornerstone3D/index.js",
        "./cornerstone3D/*": "./dist/esm/adapters/cornerstone3D/*.js",
        "./enums/*": "./dist/esm/enums/*.js",
        "./enums": "./dist/esm/enums/index.js",
        "./helpers/*": "./dist/esm/helpers/*.js",
        "./helpers": "./dist/esm/helpers/index.js",
        "./types": "./dist/esm/index.d.ts"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "test": "jest --testTimeout 60000",
        "build": "rollup -c rollup.config.mjs",
        "build:esm": "rollup -c rollup.config.mjs",
        "build:esm:watch": "rollup --watch -c rollup.config.mjs",
        "clean": "rm -rf node_modules/.cache/storybook && shx rm -rf dist",
        "clean:deep": "yarn run clean && shx rm -rf node_modules",
        "dev": "rollup --watch  -c rollup.config.mjs",
        "build:all": "yarn build",
        "format-check": "npx eslint ./src --quiet",
        "api-check": "yarn run format-check ",
        "build:update-api": "yarn run build && api-extractor run --local",
        "start": "rollup --watch -c rollup.config.mjs",
        "format": "prettier --write 'src/**/*.js' 'test/**/*.js'",
        "lint": "eslint --fix ."
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dcmjs-org/dcmjs.git"
    },
    "author": "@cornerstonejs (formerly Steve Pieper from dcmjs)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/cornerstonejs/cornerstone3D/issues"
    },
    "homepage": "https://github.com/cornerstonejs/cornerstone3D/blob/main/packages/adapters/README.md",
    "dependencies": {
        "@babel/runtime-corejs2": "^7.17.8",
        "@cornerstonejs/tools": "^2.0.0-beta.24",
        "buffer": "^6.0.3",
        "dcmjs": "^0.29.8",
        "gl-matrix": "^3.4.3",
        "ndarray": "^1.0.19"
    },
    "devDependencies": {
        "@cornerstonejs/core": "^2.0.0-beta.24"
    }
}
